{
  "manifest_version": 3,
  "name": "FinePrint - Contract Analyzer",
  "version": "1.0",
  "description": "AI-powered contract analysis and consumer protection",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "content_scripts": [{
    "matches": ["https://*/*", "http://*/*"],
    "js": ["content.js"],
    "css": ["styles/content.css"],
    "run_at": "document_end"
  }],
  "web_accessible_resources": [{
    "resources": [
      "assets/*",
      "styles/*"
    ],
    "matches": ["https://*/*", "http://*/*"]
  }],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}