{
  "manifest_version": 3,
  "name": "FinePrint - Contract Analyzer",
  "version": "1.0",
  "description": "AI-powered contract analysis and consumer protection",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/terms*",
        "*://*/tos*",
        "*://*/privacy*",
        "*://*/policy*",
        "*://*/policies*",
        "*://*/agreement*",
        "*://*/eula*",
        "*://*/disclaimer*",
        "*://*/legal*",
        "*://*/refund*",
        "*://*/return*",
        "*://*/cancellation*",
        "*://*/billing*",
        "*://*/subscription*",
        "*://*/insurance*",
        "*://*/loan*",
        "*://*/mortgage*",
        "*://*/finance*",
        "*://*/debt*",
        "*://*/investment*",
        "*://*/offer*",
        "*://*/rewards*",
        "*://*/bonus*",
        "*://*/customer*",
        "*://*/banking*",
        "*://*/credit*",
        "*://*/paylater*",
        "*://*/installment*",
        "*://*/escrow*",
        "*://*/checkout*",
        "*://*/payment*",
        "*://*/pay*",
        "*://*/fineprint*",
        "*://*/dispute*",
        "*://*/arbitration*",
        "*://*/employment*",
        "*://*/contract*",
        "*://*/hiring*",
        "*://*/freelance*",
        "*://*/gig*",
        "*://*/workterms*",
        "*://*/airline*",
        "*://*/travel*",
        "*://*/passengerrights*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "popup.html",
        "assets/*",
        "styles/*",
        "content.js"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ]
}